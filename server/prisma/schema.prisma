generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String?
  verified      Boolean  @default(false)

  storageUsed   BigInt   @default(0)
  storageLimit BigInt   @default(104857600)

  files         File[]
  tokens        Token[]
}

model File {
  id        String   @id @default(uuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  versions  FileVersion[]

  @@index([ownerId])
}

model FileVersion {
  id           String   @id @default(uuid())
  fileId       String
  file         File     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  storageKey   String   // filesystem path or S3 key
  size         Int
  mimeType     String
  checksum     String?

  originalName String
  displayName  String

  createdAt    DateTime @default(now())
  isCurrent    Boolean  @default(true)

  @@index([fileId])
}

model Token {
  id        String   @id @default(uuid())
  token     String   @unique
  purpose   TokenPurpose
  expiresAt DateTime
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token, purpose])
}

enum TokenPurpose {
  EMAIL_VERIFY
  PASSWORD_RESET
}
