generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  password     String
  name         String?
  // Add these two lines:
  storageUsed  BigInt @default(0)      // Track bytes used
  storageLimit BigInt @default(104857600) // 100MB in bytes
  files        File[]
  verified Boolean @default(false)
  tokens Token[]
}

model File {
  id        String   @id @default(uuid())
  name      String
  path      String   
  size      Int      
  mimeType  String   // e.g., "video/mp4", "application/pdf"
  createdAt DateTime @default(now())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
}

model Token {
  id        String   @id @default(uuid())
  token     String   @unique
  purpose   TokenPurpose
  expiresAt DateTime
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token, purpose])
}

enum TokenPurpose {
  EMAIL_VERIFY
  PASSWORD_RESET
}