generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  password     String
  name         String?
  // Add these two lines:
  storageUsed  BigInt @default(0)      // Track bytes used
  storageLimit BigInt @default(104857600) // 100MB in bytes
  files        File[]
}

model File {
  id        String   @id @default(uuid())
  name      String
  path      String   // Where the file lives on disk
  size      Int      // Size in bytes
  createdAt DateTime @default(now())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
}